#!/usr/bin/env bash


# Herbstluftwm start
hc() {
    herbstclient "$@"
}


#hc set_layout grid
hc set_layout horizontal

hc emit_hook reload

# KEYBINDINGS
# remove all existing keybindings
hc keyunbind --all

# if you have a super key you will be much happier with Mod set to Mod4
#Mod=Mod1  # Use alt as the main modifier
Mod=Mod4   # Use the super key as the main modifier

# MOVEMENTS
# focusing clients
hc keybind $Mod-Left  focus left
hc keybind $Mod-Down  focus down
hc keybind $Mod-Up    focus up
hc keybind $Mod-Right focus right
hc keybind $Mod-h     focus left
hc keybind $Mod-j     focus down
hc keybind $Mod-k     focus up
hc keybind $Mod-l     focus right

# Moving clients to ... on single Monitor
hc keybind $Mod-Shift-Left  shift left
hc keybind $Mod-Shift-Down  shift down
hc keybind $Mod-Shift-Up    shift up
hc keybind $Mod-Shift-Right shift right
hc keybind $Mod-Shift-h     shift left
hc keybind $Mod-Shift-j     shift down
hc keybind $Mod-Shift-k     shift up
hc keybind $Mod-Shift-l     shift right

# Moving clients to ... on dual monitor
# hc keybind $Mod-Shift-h chain , lock , shift_to_monitor -l , focus_monitor -l , unlock
# hc keybind $Mod-Shift-Left chain , lock , shift_to_monitor -l , focus_monitor -l , unlock
# hc keybind $Mod-Shift-j chain , lock , shift_to_monitor -l , focus_monitor -l , unlock
# hc keybind $Mod-Shift-Down chain , lock , shift_to_monitor -l , focus_monitor -l , unlock
# hc keybind $Mod-Shift-k chain , lock , shift_to_monitor -r , focus_monitor -r , unlock
# hc keybind $Mod-Shift-Up chain , lock , shift_to_monitor -r , focus_monitor -r , unlock
# hc keybind $Mod-Shift-l chain , lock , shift_to_monitor -r , focus_monitor -r , unlock
# hc keybind $Mod-Shift-Right chain , lock , shift_to_monitor -r , focus_monitor -r , unlock

# FRAMES
# create an empty frame at the specified direction
hc keybind $Mod-t chain , split top 0.6 , focus up
hc keybind $Mod-u chain , split bottom 0.5 , focus down
hc keybind $Mod-o chain , split right 0.7 , focus right
hc keybind $Mod-e chain , split auto , rule once index=e focus=on

# Layouts
hc keybind $Mod-Shift-t cycle_layout +1 horizontal vertical #change direction of clients
hc keybind $Mod-g chain , set smart_window_surroundings off , set_layout grid
hc keybind $Mod-Shift-g chain , set smart_window_surroundings on , set_layout max
hc keybind $Mod-Control-d spawn dropterm

# Resizing frames
resizestep=0.05
hc keybind $Mod-Control-h       resize left +$resizestep
hc keybind $Mod-Control-j       resize down +$resizestep
hc keybind $Mod-Control-k       resize up +$resizestep
hc keybind $Mod-Control-l       resize right +$resizestep
hc keybind $Mod-Control-Left    resize left +$resizestep
hc keybind $Mod-Control-Down    resize down +$resizestep
hc keybind $Mod-Control-Up      resize up +$resizestep
hc keybind $Mod-Control-Right   resize right +$resizestep

hc keybind $Mod-a set window_gap $(( $(herbstclient attr settings.window_gap) + 10 )) # increase gaps
hc keybind $Mod-Shift-a set window_gap $(( $(herbstclient attr settings.window_gap) - 10 )) # decrease gaps

hc keybind $Mod-m spawn hide_windows +1 # hide client window
hc keybind $Mod-Shift-m spawn hide_windows -1 # unhide client window
hc keybind $Mod-Control-r spawn hide_window 0


#hc keybind $Mod-Escape  pkill -USR1 -x sxhkd # reload sxhkd
hc keybind $Mod-Shift-Escape reload # reload herbstluftwm

hc keybind $Mod-q close

# TAGS or WORKSPACES
#names to display in menu
#tag_names=( {1..10} )
#tag_names=("Web" "Chat" "Edit" "Misc" "Virtual" "Media" "Steam" "Work" "Music")
tag_names=( "" "" "" "" "" "" "" "" "" )
tag_keys=( {1..9} 0 )

hc rename default "${tag_names[0]}" || true
for i in ${!tag_names[@]} ; do
    hc add "${tag_names[$i]}"
    key="${tag_keys[$i]}"
    if ! [ -z "$key" ] ; then
        hc keybind "$Mod-$key" use_index "$i"
        hc keybind "$Mod-Shift-$key" move_index "$i"
    fi
done

# Layouting

# The following cycles through the available layouts within a frame, but skips
# layouts, if the layout change wouldn't affect the actual window positions.
# I.e. if there are two windows within a frame, the grid layout is skipped.
hc keybind $Mod-space                                                           \
            or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max grid    \
               , cycle_layout +1

hc keybind $Mod-Shift-f floating toggle
hc keybind $Mod-f fullscreen toggle
hc keybind $Mod-s pseudotile toggle

# Mouse
hc mouseunbind --all
hc mousebind $Mod-Button1 move
hc mousebind $Mod-Button2 zoom
hc mousebind $Mod-Button3 resize

# Focus on ...
hc keybind $Mod-Tab   cycle_all +1
hc keybind $Mod-Shift-Tab   cycle_all -1
#hc keybind Control-Mod1-Left    focus left
#hc keybind Control-Mod1-Up      focus up
#hc keybind Control-Mod1-Right   focus right
#hc keybind Control-Mod1-Down    focus down
hc keybind Mod1-Tab         use_index +1 --skip-visible
hc keybind Mod1-Shift-Tab   use_index -1 --skip-visible
hc keybind $Mod-Control-m remove
# hc keybind $Mod1-i jumpto urigent


# Theme Resets
hc attr theme.reset 1
hc attr theme.active.reset 1
hc attr theme.normal.reset 1
hc attr theme.urgent.reset 1
hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1

# General Settings
hc attr theme.tiling.outer_width 1
hc set window_gap 10
hc set focus_follows_mouse 1

#hc set smart_window_surroundings on
hc set smart_frame_surroundings 'hide_all'
hc set mouse_recenter_gap 1
hc set hide_covered_windows on

# Frame settings
hc set frame_border_width 0
#hc set frame_border_inner_width 1
hc set frame_border_active_color "#37474f"
hc set frame_border_normal_color "#263238"
hc set frame_border_inner_color "#263238"
hc set frame_bg_normal_color "#263238"
hc set frame_bg_active_color "#37474f"
#hc set show_frame_decorations 'focused_if_multiple'
hc set frame_gap 0
hc set frame_padding 0
hc set frame_bg_transparent 1
hc set frame_transparent_width 0
hc set always_show_frame 0

## Background settings
hc attr theme.color "#282a36"
hc attr theme.background_color "#282a36"
hc attr theme.border_width 6

## Inner border normal settings
hc attr theme.inner_color "#262138"
hc attr theme.inner_width 1

## Outer border normal settings
hc attr theme.outer_color "#262138"
hc attr theme.outer_width 1

# Title settings
# hc attr theme.normal.tab_color "#282a36}"
# hc attr theme.title_align 'center'
# hc attr theme.title_color "#c3cdc8}"
# hc attr theme.title_depth 3  # space below the title's baseline
# hc attr theme.title_font 'JetBrains Mono Nerd Font:pixelsize=28'  # example using Xft
# # hc attr theme.title_font '-*-fixed-medium-r-*-*-13-*-*-*-*-*-*-*'
# hc attr theme.title_height 25
# hc attr theme.title_when always

## Settings for non-focused clients
hc attr theme.normal.color "282a36"
hc attr theme.normal.tab_color "#282a36"
hc attr theme.normal.title_color "#898989"

## Settings for focused clients
hc attr theme.active.background_color "#282a36"
hc attr theme.active.color "#947cc3"
hc attr theme.active.tab_color "#947cc3"
hc attr theme.active.inner_color "#03a8f4"

## Settings for urgent clients
hc attr theme.urgent.color "#e91e63"
hc attr theme.urgent.tab_color "#e91e63"
hc attr theme.urgent.inner_color "#9A65B0"

## Settings for floating
hc attr theme.floating.border_width 5
hc attr theme.floating.outer_width 4
hc attr theme.floating.outer_color "#947cc3"
hc attr theme.floating.title_when always

# ## Settings for minimal
hc attr theme.minimal.title_height 30
hc attr theme.minimal.title_color "#c3cdc8"
hc attr theme.minimal.title_depth 3  # space below the title's baseline
hc attr theme.minimal.title_align 'center'
hc attr theme.minimal.title_font 'JetBrains Mono Nerd Font:pixelsize=28'  # example using Xft
hc attr theme.minimal.tab_color "#1F1F1Fdd"
hc attr theme.minimal.color "#947cc3"


# RULES
hc unrule -F
hc rule focus=on # normally focus new clients
hc rule floatplacement=center
#hc rule focus=off # normally do not focus new clients

#assign applications to workspaces or tags
hc rule class~'(brave|Brave-browser|Chromium|Microsoft-edge)' tag='' switchtag=on focus=on
hc rule class='Spotify' tag='' switchtag=on focus=on
hc rule class~'(subl|Code|code)' tag=''  switchtag=on focus=on
hc rule class~'(discord|Discord)' tag='' switchtag=on focus=on
#hc rule class~'(vlc|mpv|Mpv)' tag='' switchtag=on focus=on
hc rule class~'(VirtualBox Manager|Vmplayer|qBittorrent)' tag='' switchtag=on focus=on
hc rule class~'(Thunar|Pcmanfm|Nemo)' tag='' switchtag=on focus=on
hc rule class~'(Shotcut|Gpick|steam|Steam)' tag='' switchtag=on pseudotile=on focus=on
hc rule class~'(gimp|Gimp)' tag='' switchtag=on focus=on
hc rule class~'(Zathura|zathura|Lxappearance|Pavucontrol|upc.exe)' tag='' switchtag=on pseudotile=on focus=on
#hc rule class='Steam' title~'.*Barátlista.*' floating=on focus=off
#hc rule class='Steam' title~'Steam.*' focus=off floating=on

# SCRATCHPADS #
#-------------#
hc rule title~'scratchpad' floating=on floatplacement=center floating_geometry=1400x800
hc rule title~'FM' floating=on floatplacement=center floating_geometry=1400x800
hc rule title~'News' floating=on floatplacement=center floating_geometry=1400x800
hc rule class~'FfmpegGUI.py' floating=on floatplacement=center floating_geometry=1200x800
hc rule title~'Music' floating=on floatplacement=center floating_geometry=1400x800
hc rule title~'Todo' floating=on floatplacement=center floating_geometry=1000x650
#hc rule title~'.*Steam.*' focus=off floating=on


# give focus to most common terminals
hc rule class~'(.*[Rr]xvt.*|.*[Tt]erm|Konsole)' floating=on focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' floating=on
#hc rule windowtype='_NET_WM_WINDOW_TYPE_DIALOG' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK|DESKTOP)' manage=off
hc rule fixedsize floating=on

hc set tree_style '╾│ ├╰╼─╮'



# unlock, just to be sure
hc unlock


#Dualmonitor setup
# hc detect_monitors
#hc set_monitors 1920x1080+0+0 1920x1080+1920+0
#hc remove_monitor 1


#room for polybar on both monitors
# find the panel
#panel=$HOME/.config/herbstluftwm/panel.sh
#[ -x "$panel" ] || panel=/etc/xdg/herbstluftwm/panel.sh
panel=$HOME/.config/polybar/launch.sh
for monitor in $(herbstclient list_monitors | cut -d: -f1) ; do
start it on each monitor
$panel  $monitor &
#hc pad 0 "" "" 25
hc pad 0 26 0 0
