#!/usr/bin/env bash

BOOKFILE="$HOME/.config/rofi/bookmarks.txt"

choice=$(rofi -dmenu -p "Bookmarks" --lines=15 --allow-markup=true --height=400  < "$BOOKFILE")
[ -z "$choice" ] && exit 0

# Ha a sor parancs szóközt tartalmaz (pl. "kitty nvim ..."),
# futtasd mint parancs; ha csak URL, akkor xdg-open.

eval "$choice" &
