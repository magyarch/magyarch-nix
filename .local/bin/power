#!/bin/sh

DIALOG_RESULT=$(echo -e 'Quit i3\nHibernate\nReboot\nPoweroff' | dmenu -p "SYSTEM" )

case $DIALOG_RESULT in
        "Quit i3" ) fancy-quit ;;
        "Hibernate") systemctl hibernate ;;
        "Reboot") systemctl reboot ;;
        "Poweroff") systemctl poweroff ;;
        *) exit 0
esac
